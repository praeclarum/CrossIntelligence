<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sample"
             x:Class="Sample.MainPage">

    <Grid
        RowDefinitions="Auto, *">
        <Label
            Text="Welcome to CrossIntelligence!"
            FontSize="32"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Margin="20"
            Grid.Row="0"/>
        <CollectionView
            x:Name="ExampleList"
            Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Example">
                        <Grid
                            ColumnDefinitions="Auto, *"
                            RowDefinitions="Auto, Auto, Auto, 44"
                            RowSpacing="10"
                            ColumnSpacing="20"
                            Padding="10"
                            BackgroundColor="{Binding BackgroundColor}"
                            >
                            <Label Grid.Column="0" Grid.Row="0" Text="Instructions" VerticalOptions="Center"/>
                            <Label Grid.Column="1" Grid.Row="0" Text="{Binding Instructions}" VerticalOptions="Center" FontSize="18"/>
                            <Label Grid.Column="0" Grid.Row="1" Text="Prompt" VerticalOptions="Center"/>
                            <Editor Grid.Column="1" Grid.Row="1" Text="{Binding Prompt}"  VerticalOptions="Center" FontSize="18" BackgroundColor="#333"/>
                            <Label Grid.Column="0" Grid.Row="2" Text="Output" VerticalOptions="Center"/>
                            <VerticalStackLayout
                                Grid.Column="1" Grid.Row="2" Spacing="10"
                                VerticalOptions="Center"
                                BackgroundColor="#111">
                                <Label Text="{Binding Output}" FontSize="22" FontAttributes="Bold"/>
                                <Button
                                    Text="Run"
                                    Command="{Binding RunCommand}"
                                    HorizontalOptions="Start"/>
                            </VerticalStackLayout>
                        </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
